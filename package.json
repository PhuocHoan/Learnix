{
  "name": "learnix-monorepo",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "precommit": "pnpm format && turbo lint typecheck test"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vercel/node": "^5.5.13",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "apps/web/src/**/*.{ts,tsx}": [
      "pnpm --filter @repo/web eslint --max-warnings=0"
    ],
    "apps/api/src/**/*.ts": [
      "pnpm --filter @repo/api eslint --max-warnings=0 --fix"
    ]
  },
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=18"
  }
}
