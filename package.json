{
  "name": "learnix-monorepo",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "precommit": "pnpm format && turbo lint typecheck test"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/core": "^11.1.9",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.1.9",
    "@tiptap/extension-link": "^3.13.0",
    "@tiptap/react": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "cookie-parser": "^1.4.7",
    "react-markdown": "^10.1.0",
    "reflect-metadata": "^0.2.2",
    "remark-gfm": "^4.0.1",
    "rxjs": "^7.8.2",
    "tiptap-markdown": "^0.9.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/cookie-parser": "^1.4.10",
    "@vercel/node": "^5.5.14",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.6.2",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "apps/web/src/**/*.{ts,tsx}": [
      "pnpm --filter @repo/web eslint --max-warnings=0"
    ],
    "apps/api/src/**/*.ts": [
      "pnpm --filter @repo/api eslint --max-warnings=0 --fix"
    ]
  },
  "engines": {
    "node": ">=24"
  }
}
