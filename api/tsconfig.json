{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "src/*": ["apps/api/src/*"]
    }
  },
  "include": ["./**/*", "../apps/api/src/**/*"],
  "exclude": ["../node_modules", "../dist", "../apps/api/dist"]
}
