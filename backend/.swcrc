{
  "$schema": "https://swc.rs/schema.json",
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "keepClassNames": true,
    "target": "es2022",
    "loose": false,
    "minify": {
      "compress": {
        "unused": true
      },
      "mangle": false
    }
  },
  "module": {
    "type": "nodenext"
  },
  "minify": false
}
